def turn(board)
  puts "Please enter 1-9:"
  input = gets.strip
  index = input_to_index(input)

  if valid_move?(board, index)
    token = current_player(arr)
    move(board, index, token)
    display_board(board)
  else
    while !(valid_move?(board, index))
      puts "Invalid move! Please enter 1-9:"
      input = gets.strip
      index = input_to_index(input)
    end
  end
end
